<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cite306.project">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/icon"
            android:supportsRtl="true"
            android:theme="@style/Theme.CITE306Final">
        <activity android:name=".IntroductionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
                  android:windowSoftInputMode="adjustPan" />
        <activity android:name=".dashboard.DashboardActivity"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".dashboard.recipeSearch.RecipeSearchActivity"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".dashboard.makeRecipe.MakeRecipeActivity"
                  android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>